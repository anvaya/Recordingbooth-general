  <AdminBackButtonColor>#FFE1B9B0</AdminBackButtonColor>
  <AdminExitButtonText>EXIT</AdminExitButtonText>
  <AdminExitButtonColor>#FFFE0000</AdminExitButtonColor>
  <AdminPopupBackgroundColor>#FFC0C0C0</AdminPopupBackgroundColor>
  <AdminBackgroundImage>Resources\AdminBackgroundImage.jpg</AdminBackgroundImage>

  <!-- User List screen -->
  <UserListBackButtonText>BACK</UserListBackButtonText>
