  <PlaybackBackgroundImage>Resources\background.jpg</PlaybackBackgroundImage>
  
  <!-- Admin screen -->
  <AdminUpdateButtonText>UPDATE</AdminUpdateButtonText>
  <AdminUpdateButtonColor>#FFCADAA9</AdminUpdateButtonColor>
  <AdminViewUsersButtonText>VIEW\nUSERS</AdminViewUsersButtonText>
  <AdminViewUsersButtonColor>#FFCADAA9</AdminViewUsersButtonColor>
  <AdminExportButtonText>EXPORT\nDATA</AdminExportButtonText>
  <AdminExportButtonColor>#FFCADAA9</AdminExportButtonColor>
